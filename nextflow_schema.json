{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/csgenetics_scrnaseq//nextflow_schema.json",
  "title": "csgenetics_scrnaseq pipeline parameters",
  "description": "Pipeline for processing CS Genetics single cell RNA-Seq data",
  "type": "object",
  "$defs": {
    "input_output_options": {
      "title": "Input/output options",
      "type": "object",
      "fa_icon": "fas fa-terminal",
      "description": "Define where the pipeline should find input data and save output data.",
      "required": ["outdir"],
      "properties": {
        "outdir": {
          "type": "string",
          "format": "directory-path",
          "description": "The output directory where the results will be saved. You have to use absolute paths to storage on Cloud infrastructure.",
          "fa_icon": "fas fa-folder-open",
          "default": "./results"
        }
      }
    }
  },
  "allOf": [
    {
      "$ref": "#/$defs/input_output_options"
    }
  ],
  "properties": {
    "input_csv": {
      "type": "string",
      "description": "Path to the input csv"
    },
    "barcode_list_path": {
      "type": "string",
      "default": "s3://csgx.public.readonly/resources/barcode_lists/IDT_IO_kit_v2.csv",
      "description": "Path to the barcode list"
    },
    "barcode_correction_list_path": {
      "type": "string",
      "default": "s3://csgx.public.readonly/resources/barcode_correction_lists/IDT_IO_kit_v2_correction_list.tsv",
      "description": "Path to the barcode list with hamming corrections"
    },
    "barcode_pattern": {
      "type": "string",
      "default": "CCCCCCCCCCCCC",
      "description": "Pattern of the barcode for UMI-Tools"
    },
    "genome": {
      "type": "string",
      "description": "The key used to select genomic resources"
    },
    "star_index": {
      "type": "string",
      "description": "Path to the STAR index"
    },
    "gtf": {
      "type": "string",
      "description": "Path to the GTF file"
    },
    "mitochondria_chromosome": {
      "type": "string",
      "description": "The mito gene prefix"
    },
    "mixed_species": {
      "type": "boolean",
      "description": "bool whether this is a mixed species run"
    },
    "hsap_mitochondria_chromosome": {
      "type": "string",
      "description": "The mito gene prefix for human"
    },
    "mmus_mitochondria_chromosome": {
      "type": "string",
      "description": "The mito gene prefix for mouse"
    },
    "hsap_gene_prefix": {
      "type": "string",
      "description": "The gene prefix for human"
    },
    "mmus_gene_prefix": {
      "type": "string",
      "description": "The gene prefix for mouse"
    },
    "minimum_count_threshold": {
      "type": "integer",
      "default": 100,
      "description": "The minimum number of counts used for cell calling"
    },
    "sss_nmer": {
      "type": "integer",
      "default": 8,
      "description": "The length of the SSSmer user in SSS amplification"
    },
    "awsregion": {
      "type": "string",
      "description": "AWS region"
    },
    "awsqueue": {
      "type": "string",
      "description": "AWS queue"
    },
    "max_memory": {
      "type": "string",
      "default": "256 GB",
      "description": "Per task memory limit"
    },
    "max_cpus": {
      "type": "integer",
      "default": 16,
      "description": "Per task CPU limit"
    },
    "max_time": {
      "type": "string",
      "default": "10d",
      "description": "Per task time limit"
    }
  }
}
